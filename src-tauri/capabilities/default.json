{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "execute-sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": "\\S+"
            }
          ]
        },
        {
          "name": "execute-cmd",
          "cmd": "cmd",
          "args": [
            "/c",
            {
              "validator": "\\S+"
            }
          ]
        }
      ]
    },
    "shell:allow-stdin-write",
    "shell:allow-kill",
    "core:path:default"
  ]
}
