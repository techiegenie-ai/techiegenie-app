{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "execute-sh",
          "cmd": "sh",
          "args": ["-c", { "validator": ".+" }]
        },
        {
          "name": "execute-bash",
          "cmd": "bash",
          "args": ["-c", { "validator": ".+" }]
        },
        {
          "name": "execute-zsh",
          "cmd": "zsh",
          "args": ["-c", { "validator": ".+" }]
        },
        {
          "name": "execute-cmd",
          "cmd": "cmd",
          "args": ["/c", { "validator": ".+" }]
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "execute-sh",
          "cmd": "sh",
          "args": ["-c", { "validator": ".+" }]
        },
        {
          "name": "execute-bash",
          "cmd": "bash",
          "args": ["-c", { "validator": ".+" }]
        },
        {
          "name": "execute-cmd",
          "cmd": "cmd",
          "args": ["/c", { "validator": ".+" }]
        }
      ]
    },
    "shell:allow-stdin-write",
    "shell:allow-kill",
    "shell:allow-spawn",
    "shell:allow-execute",
    "core:path:default"
  ]
}
