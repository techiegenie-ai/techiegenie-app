{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "techiegenie-app",
  "version": "0.1.0",
  "identifier": "co.techiegenie.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "techiegenie-app",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "scope": [
        {
          "name": "execute-sh",
          "cmd": "sh",
          "args": true
        },
        {
          "name": "execute-cmd",
          "cmd": "cmd",
          "args": true
        }
      ]
    }
  }
}
